<!DOCTYPE html>
<html>
<head>
  <title>Vinyl : <%= profile.name %></title>
  <%- include ./partials/scripts_style.ejs %>
</head>
<body>
  <%- include ./partials/navbar.ejs %>

  <h5><%= profile.name %></h5>
  <h5>Email <%= profile.email %></h5>
  <h5>Date Joined <%= profile.join_date.toDateString().substring(0, 15) %></h5>

  <br>

  <h2>Reviews</h2>
  <% if (reviews.length === 0) { %>

    <h5>No reviews yet!</h5>

  <% } else { %>

    <div class="review-list">
      <% reviews.forEach(function(review) { %>
        <div>
          <h5><%= review.album_reviewed %></h5>
          <h5><%= review.content %></h5>
          <h5><%= review.review_date.toDateString().substring(0, 15) %></h5>
          <span><%= review.author %></span>
        </div>
      <% }) %>
    </div>

  <%}%>

</body>
</html>
